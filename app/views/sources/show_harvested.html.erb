<% title @source.name %>
<%= render partial: 'shared/nav_source', locals: {referer: @referer} %>
<div class="content-flex">
  <% sub = @source.in_garden_of_user(current_user) %>
  <%= render partial: 'shared/tree', locals: {sub: sub, source: @source} %>
  <div class="sub-menu">
    <div class="sub-menu-item">
      <%= link_to source_show_latest_path(@source, :referer => @referer) do %>
        Récents
      <% end %>
    </div>
    <div class="sub-menu-item active">
      <%= link_to source_show_harvested_path(@source, :referer => @referer) do %>
        Récoltés
      <% end %>
    </div>
  </div>
  <% if @unread == [] && @harvest == [] %>
    <span class="empty-message">Vous n'avez pas encore récolté de fruits de cet arbre. 👩‍🌾</span>
  <% end %>
  <% unless @unread == [] %>
    <%= render partial: 'shared/redbar', locals: {title: @unread.count.to_s + ' NON LUS'} %>
    <% @unread.each do |e| %>
      <%= render partial: 'shared/fruit_headless', locals: {e: e} %>
    <% end %>
    <%= render partial: 'shared/redbar', locals: {title: ''} %>
  <% end %>
  <% @harvest.each do |e| %>
    <%= render partial: 'shared/fruit_headless', locals: {e: e} %>
  <% end %>
</div>