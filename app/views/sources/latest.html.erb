<% title "Plant a tree" %>
<div class="content-flex garden-container">
  <div class="back">
    <%= link_to garden_path do %>
      <%= image_tag('chevron_left.svg', class: 'chevron') %> Back
    <% end %>
  </div>
  <%= link_to new_source_path do %>
    <div class="source">
      <div class="content-left-column">
          <%= image_tag('new_tree.svg', class: 'source-pic') %>
      </div>
      <div class="content-right-column">
        <div class="content-top">
          <div class="plant-tree">
            Plant a tree from the wild
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="sub-menu">
    <div class="sub-menu-item">
      <%= link_to trees_top_path do %>
        Top
      <% end %>
    </div>
    <div class="sub-menu-item active">
      <%= link_to trees_latest_path do %>
        Latest
      <% end %>
    </div>
  </div>
  <% @sources.each do |s| %>
    <div class="content">
      <div class="content-left-column">
        <%= link_to source_path(s) do %>
          <%= image_tag(s.picture, class: 'source-pic') %>
        <% end %>
      </div>
      <div class="content-right-column">
        <div class="content-top">
          <div class="source-title alone">
            <%= link_to source_path(s) do %>
              <%= truncate(s.name, length: 30) %>
            <% end %>
          </div>
        </div>
        <%= render partial: 'shared/tree_footer', locals: {sub: nil, source: s} %>
      </div>
    </div>
  <% end %>
</div>
<%= render partial: 'shared/footer' %>