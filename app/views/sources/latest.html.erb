<% title "Plant a tree" %>
<div class="garden-flex">
  <div class="back">
    <%= link_to garden_path do %>
      <%= image_tag('chevron_left.svg', class: 'chevron') %> Back to Garden
    <% end %>
  </div>
  <%= search_form_for @search, url: search_sources_path do |f| %>
    <%= f.search_field :name_cont, class: 'source_search_input' %>
    <%= f.submit class: 'source_search_submit' %>
  <% end %>
  <div class="sub-menu">
    <div class="sub-menu-item">
      <%= link_to trees_top_path do %>
        Top
      <% end %>
    </div>
    <div class="sub-menu-item active">
      <%= link_to trees_latest_path do %>
        Latest
      <% end %>
    </div>
  </div>
  <% @latest.each do |source| %>
    <% sub = source.in_garden_of_user(current_user) %>
    <%= render partial: 'shared/tree', locals: {sub: sub, source: source} %>
  <% end %>
</div>
<%= render partial: 'shared/footer' %>