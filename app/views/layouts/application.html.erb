  <meta property="og:url" content="http://www.jerapp.com/">
  <meta property="og:description" content="Votre temps est votre trésor le plus précieux. Apprenez et restez informée dans un environnement qui vous respecte.">
  <meta property="og:image" content="http://www.jerapp.com/images/jera_facebook_og_image.png">
  <meta property="og:locale" content="fr_FR">
