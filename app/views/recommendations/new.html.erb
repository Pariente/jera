<% title "Recommander \"#{@entry.title}\"" %>
<%= render partial: 'shared/share_searchbar', locals: {entry: @entry} %>
<div class="plant-tree-flex">
  <h1>Recommander</h1>
  <h3>"<%= @entry.title %>"</h3>
  <hr>
  <% if @contacts == [] %>
    <p class="no_results">Aucun contact n'a été trouvée.</p>
  <% else %>
    <% @contacts.each do |c| %>
      <div class="friend-div">
        <%= image_tag(c.picture) %>
        <div class="right-column full-width">
          <span><b><%= c.username %></b></span>
          <textarea onkeyup="recommendation_textarea(this)" maxlength="500" placeholder='Pourquoi avez-vous pensé à elle/lui ?' class="message"></textarea>
          <div class="friend-request-buttons">
            <a href="#" data-entry-id="<%= @entry.id %>" data-receiver-id="<%= c.id %>" class="recommend-to-friend not-active">
              Envoyer
            </a>
            <span class="green hidden">Envoyée</span>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>