<div class="profile">
  <div class="profile-flex">
    <div class="profile-background"></div>
    <div class="profile-pic-and-title">
      <% if user.picture == nil %>
        <%= image_tag('logo.png', class: 'profile-pic') %>
      <% else %>
        <%= image_tag(user.picture, class: 'profile-pic') %>
      <% end %>
      <div class="profile-name">
        <%= user.username %>
        <div class="row">
          <%= link_to edit_user_registration_path do %>
            <button class="edit-profile-button">
              Modifier mon profil
            </button>
          <% end %>
          <%= link_to friends_list_path do %>
            <button class="friends-list-button">
              Liste de mes amis
            </button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
