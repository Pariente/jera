<div class="content">
  <div class="content-left-column">
    <%= link_to source_show_path(e.source) do %>
      <%= image_tag(e.source.picture, class: 'source-pic') %>
    <% end %>
  </div>
  <div class="content-right-column">
    <div class="content-top">
      <div class="source-title">
          <%= link_to source_show_path(e.source) do %>
            <%= truncate(e.source.name, length: 30) %>
          <% end %>
      </div>
      <div class="time-published">il y a <%= distance_of_time_in_words(e.created_at, Time.now) %></div>
    </div>
    <div class="content-box">
      <%= render partial: 'shared/content_info', locals: {e: e} %>
      <%= render partial: 'shared/fruit_footer', locals: {entry: e, rec_id: nil} %>
    </div>
  </div>
  <div class="content-masked hidden">
    <span>« <b><%= e.title.truncate(20) %></b> » a été masqué.</span>
    <%= link_to entry_unmask_path(e, recommendation_id: nil), class: 'unmask', remote: :true do %>
      Annuler
    <% end %>
  </div>
  <div class="content-harvested hidden">
    <span>« <b><%= e.title.truncate(20) %></b> » a été récolté.</span>
    <%= link_to entry_unharvest_path(e, recommendation_id: nil), class: 'cancel-harvest', remote: :true do %>
      Annuler
    <% end %>
  </div>
</div>