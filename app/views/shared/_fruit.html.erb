<div class="content">
  <div class="content-left-column">
    <%= link_to source_path(e.source) do %>
      <%= image_tag(e.source.picture, class: 'source-pic') %>
    <% end %>
  </div>
  <div class="content-right-column">
    <div class="content-top">
      <div class="source-title">
          <%= link_to source_path(e.source) do %>
            <%= truncate(e.source.name, length: 30) %>
          <% end %>
      </div>
      <div class="time-published"><%= distance_of_time_in_words(e.created_at, Time.now) %> ago</div>
    </div>
    <div class="content-box">
      <%= link_to e.media_url, target: :blank, class: 'content-anchor' do %>
        <%= image_tag(e.thumbnail_url, class: 'content-thumbnail') %>
        <p class="content-title"><%= e.title %></p>
      <% end %>
      <p class="content-desc"><%= truncate(e.content, length: 200) %></p>
      <%= render partial: 'shared/fruit_footer', locals: {entry: e} %>
    </div>
  </div>
  <div class="content-masked hidden">
    <span>You wonâ€™t see this content again.</span>
    <%= link_to new_entry_masking_path(e), class: 'unmask', remote: :true do %>
      Unmask
    <% end %>
  </div>
  <div class="content-harvested hidden">
    <span>You have harvested this content.</span>
    <%= link_to new_entry_picking_path(e), class: 'cancel-harvest', remote: :true do %>
      Remove from harvest
    <% end %>
  </div>
</div>