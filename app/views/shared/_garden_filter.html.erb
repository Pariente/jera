<div class="garden-colours">
  <div class="filter-colours">Filtrer :</div>
  <div class='filtered-colour'>
    <% if colour == 'red' %>
      🍓 <span class="underline">mes arbres rouges</span>
    <% elsif colour == 'blue' %>
      🍇 <span class="underline">mes arbres bleus</span>
    <% elsif colour == 'yellow' %>
      🍋 <span class="underline">mes arbres jaunes</span>
    <% else %>
      🌳 <span class="underline">tous mes arbres</span>
    <% end %>
    <%= image_tag('chevron_down.svg', height: '10px') %>
  </div>
  <div class="choose-colour hidden">
    <ul>
      <li><%= link_to garden_path do %>🌳 tous mes arbres<% end %></li>
      <li><%= link_to garden_path(colour: 'red') do %>🍓 mes arbres rouges<% end %></li>
      <li><%= link_to garden_path(colour: 'blue') do %>🍇 mes arbres bleus<% end %></li>
      <li><%= link_to garden_path(colour: 'yellow') do %>🍋 mes arbres jaunes<% end %></li>
    </ul>
    <%= image_tag('chevron_up.svg', height: '10px', class: 'hide-colour-selector') %>
  </div>
</div>