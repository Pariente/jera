<% title "Harvests" %>
<div class="content-flex">
  <% if @fresh == [] %>
    <br><br>
    <h1>This is where we store your daily harvests ğŸ˜‹</h1>
    <%= link_to trees_top_path do %>
      <p class="center green underlined">Plant some trees to harvest their fruits.</p>
    <% end %>
  <% end %>
  <% @harvests.each do |h| %>
    <%= link_to harvest_path(date: h[0]) do %>
      <div class="harvest-pack">
        <div class="harvest-picture">
          <% if h[1][1] == nil %>
            <div class="harvest-miniature one">
              <%= image_tag h[1][0].entry.thumbnail_url %>
            </div>
          <% end %>
          <% if (h[1][1] != nil && h[1][2] == nil) %>
            <div class="harvest-miniature two">
              <%= image_tag h[1][0].entry.thumbnail_url %>
            </div>
            <div class="harvest-miniature two">
              <%= image_tag h[1][1].entry.thumbnail_url %>
            </div>
          <% end %>
          <% if h[1][2] != nil %>
            <div class="harvest-miniature">
              <%= image_tag h[1][0].entry.thumbnail_url %>
            </div>
            <div class="harvest-miniature">
              <%= image_tag h[1][1].entry.thumbnail_url %>
            </div>
            <div class="harvest-miniature">
              <%= image_tag h[1][2].entry.thumbnail_url %>
            </div>
          <% end %>
          <% if h[1][3] != nil %>
            <div class="harvest-miniature">
              <%= image_tag h[1][3].entry.thumbnail_url %>
            </div>
          <% end %>
        </div>
        <div class="harvest-text">
          <% if h[0].today? %>
            <p class="harvest-date">Today</p>
          <% elsif h[0] == Date.yesterday %>
            <p class="harvest-date">Yesterday</p>
          <% else %>
            <p class="harvest-date"><%= h[0].strftime("%e %b %Y") %></p>
          <% end %>
          <p class="harvest-contents"><%= pluralize(h[1].count, "fruit") %> harvested</p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
<%= render partial: 'shared/navbar' %>