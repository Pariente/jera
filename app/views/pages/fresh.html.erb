<% load_more = "" %>
<% if @load_more_count == 0 %>
  <% load_more = "hidden" %>
<% end %>
<%= render partial: 'shared/navbar' %>
<div class="content-flex">
  <h1>Dernières publications</h1>
  <hr>
  <% if @fresh == [] %>
    <span class="empty-message">Vous êtes parfaitement à jour. 😌</span>
    <span class="empty-message">Pourquoi ne pas <%= link_to harvest_path, class: 'underline' do %>consulter votre récolte<% end %> si vous en avez le temps ? 👩‍🌾</span>
  <% else %>
    <% @fresh.each do |e| %>
      <% cache "entry-#{e.id}" do %>
        <%= render partial: 'shared/fruit', locals: {e: e} %>
      <% end %>
    <% end %>
    <a class="load-more-fresh <%= load_more %>">
      <p class="text">Voir <%= @load_more_count %> de plus</p>
      <p class="loading hidden">Chargement<span>.</span><span>.</span><span>.</span></p>
    </a>
  <% end %>
</div>