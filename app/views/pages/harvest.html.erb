<% title "Harvest" %>
<div class="nav">
  <div class="nav-flex">
    <%= link_to root_path do %>
      <div class="nav-green-button">
        <%= image_tag('white_arrow_left.svg', class: 'arrow-left') %>
        <span>Mes nouveautés</span>
      </div>
    <% end %>
  </div>
</div>
<div class="content-flex">
  <% if @unread == [] && @harvest == [] %>
    <br><br>
    <h1>Harvest some of your trees' fruits to fill this place with joy. 👩‍🌾</h1>
  <% end %>
  <% unless @unread == [] %>
    <%= render partial: 'shared/redbar', locals: {title: @unread.count.to_s + ' NOT SEEN'} %>
    <% @unread.each do |e| %>
      <%= render partial: 'shared/fruit_harvested', locals: {e: e} %>
    <% end %>
    <%= render partial: 'shared/redbar', locals: {title: ''} %>
  <% end %>
  <% unless @harvested == nil %>
    <% @harvested.each do |e| %>
      <%= render partial: 'shared/fruit_harvested', locals: {e: e} %>
    <% end %>
  <% end %>
</div>