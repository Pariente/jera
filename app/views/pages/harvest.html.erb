<% title "Ma Récolte" %>
<div class="nav">
  <div class="nav-flex">
    <%= link_to root_path do %>
      <div class="nav-green-button">
        <%= image_tag('white_arrow_left.svg', class: 'arrow-left') %>
        <span>Mes nouveautés</span>
      </div>
    <% end %>
  </div>
</div>
<div class="content-flex">
  <%= render partial: 'shared/harvest_filter', locals: {colour: @colour} %>
  <% if @unread == [] && @harvested == [] %>
    <span class="empty-message">Récoltez les fruits de vos arbres qui vous intéressent pour les lire plus tard ou les conserver précieusement ici. 👩‍🌾</span>
  <% end %>
  <% unless @unread == [] %>
    <%= render partial: 'shared/redbar', locals: {title: @unread.count.to_s + ' NON LUS'} %>
    <% @unread.each do |action| %>
      <% if action.recommendation_id != nil %>
        <%= render partial: 'shared/recommendation', locals: {e: action.entry, r: action.recommendation} %>
      <% else %>
        <%= render partial: 'shared/fruit_harvested', locals: {e: action.entry} %>
      <% end %>
    <% end %>
    <%= render partial: 'shared/redbar', locals: {title: ''} %>
  <% end %>
  <% unless @harvested == nil %>
    <% @harvested.each do |e| %>
      <%= render partial: 'shared/fruit_harvested', locals: {e: action.entry} %>
    <% end %>
  <% end %>
</div>